@model IEnumerable<LeaveManagementSystem.Data.LeaveType>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create" class="btn btn-primary">Create New Leave</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                    <div class="btn-group">
                        <h1 data-bs-toggle="dropdown" aria-expanded="false">
                            &#x2022;&#x2022;&#x2022;
                        </h1>
                        <ul class="dropdown-menu text-center">
                            <li ><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mb-1">Edit</a></li>
                            <li><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mb-1">Details</a></li>
                            <li><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></li>
                            
                        </ul>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
